<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewItemClienteTitulo"
        android:layout_width="885dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/ItemClienteTitulo"
        android:textAlignment="center"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewItemClienteNome"
        android:layout_width="881dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/ItemClienteNome"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewItemClienteTitulo" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="881dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/ItemClienteTelefone"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewItemClienteNome" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="881dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="@string/ItemClienteNif"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="881dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="@string/ItemClienteMorada"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />
</androidx.constraintlayout.widget.ConstraintLayout>